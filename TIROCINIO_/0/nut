FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      nut; // Viscosità turbolenta di sottogriglia
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -1 0 0 0 0];

internalField   uniform 0; // Valore iniziale (verrà calcolato da WALE)

boundaryField
{
    inlet
    {
        type            calculated;
        value           $internalField;
        // Alternativa: type zeroGradient;
    }
    outlet
    {
        type            calculated;
        value           $internalField;
        // Alternativa: type zeroGradient;
    }
    topWall
    {
        type            symmetry;
    }
    bottomWall
    {
        type            symmetry;
    }
    bodyWall
    {
        
        type            nutkWallFunction;
        value           $internalField;
        // Alternativa (meno robusta?): type fixedValue; value uniform 0;
    }
    actuatorSlots
    {
        type            nutkWallFunction;
        value           $internalField;
    }
    frontAndBack
    {
        type            empty;
    }
}

// ************************************************************************* //
